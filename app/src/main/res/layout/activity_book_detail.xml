<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookDetailActivity"
    android:background="#fff">

<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/books"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constBooks"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="150dp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/book_detail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/ic_launcher_background" />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/book_detail_title"
            android:layout_width="0dp"
            android:paddingTop="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardview"
             />
        <RatingBar
            android:layout_centerInParent="true"
            style="?android:attr/ratingBarStyleSmall"
            app:layout_constraintBottom_toBottomOf="@id/book_detail_title"
            android:layout_marginLeft="30dp"
            android:id="@+id/ratebar"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/book_detail_title"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cardview"
            android:theme="@style/RatingBar"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="5"
            />
        <TextView

            android:id="@+id/auteur"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@id/cardview"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratebar" />
        <TextView

            android:id="@+id/Spe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cardview"
            app:layout_constraintTop_toBottomOf="@+id/auteur" />
        <TextView

            android:id="@+id/The"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cardview"
            app:layout_constraintTop_toBottomOf="@+id/Spe" />
        <TextView
            android:id="@+id/infos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="30dp"
            android:text="INFO:"
            android:textColor="@color/black"
            android:paddingTop="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@+id/The"
            />
        <TextView
            android:id="@+id/Desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infos" />


        <View
            android:background="#2e2e2e"
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/book_detail_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="18 jan 2018 | by Arun Larrson " />



        <ImageView
            android:id="@+id/book_detail_currentuser_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="visible"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/book_detail_date_name"
            tools:srcCompat="@tools:sample/avatars" />


        <EditText

            android:hint="Write Comment"
            android:background="@drawable/edittext_button_style_rounded"
            android:id="@+id/book_detail_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:visibility="visible"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/book_detail_currentuser_img"
            app:layout_constraintStart_toEndOf="@+id/book_detail_currentuser_img"
            app:layout_constraintTop_toTopOf="@+id/book_detail_currentuser_img" />
        <Button
            android:id="@+id/deletebook"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:layout_marginLeft="40dp"
            app:layout_constraintStart_toEndOf="@id/book_detail_currentuser_img"
            android:background="@drawable/reg_btn_style"
            android:text="Delete this book"
            app:layout_constraintBottom_toBottomOf="@+id/book_detail_comment"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.529" />
        <Button
            android:id="@+id/book_detail_add_comment_btn"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="0dp"
            android:visibility="visible"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_button_style_rounded"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="@+id/book_detail_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/book_detail_comment"
            app:layout_constraintTop_toTopOf="@+id/book_detail_comment"
            app:layout_constraintVertical_bias="0.529" />

        <ImageView
            android:id="@+id/book_detail_user_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/book_detail_date_name"
            app:layout_constraintStart_toEndOf="@+id/book_detail_date_name"
            app:layout_constraintTop_toTopOf="@+id/book_detail_date_name"
            tools:srcCompat="@tools:sample/avatars" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_detail_comment" />

    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:text="you must logged in or register "
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            android:background="#B0E0E6"
            android:elevation="0dp"
            android:text="Register Now "/>
        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="#B0E0E6"
            android:visibility="invisible"
            android:paddingRight="10dp"
            android:elevation="0dp"
            android:text="login "/>
    </LinearLayout>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>